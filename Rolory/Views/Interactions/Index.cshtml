@model IEnumerable<Rolory.Models.Interaction>

@{
    ViewBag.Title = "Index";
    var contact = ViewBag.Contact;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Interactions", new { contact = Model.Where(c => c.Contact == contact).Select(c => c) })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contact.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Message.Subject)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
