@model IEnumerable<Rolory.Models.Interaction>

@{
    ViewBag.Title = "DisplayRecent";
}

<br />
<div class="row">
    <div class="breadcrumb">
        <div class="col-md-push-9">
            <h2>Recent Interactions</h2>
        </div>
    </div>
</div>

<table class="table">
    <tr>
        @if (Model.Count() != 0)
        {

            <th>
                @Html.DisplayName("Name")
            </th>

        }
        @if (Model.Count() != 0)
        {
            <th>
                @Html.DisplayNameFor(model => model.Moment)
            </th>
        }
        @if (Model.Count() != 0)
        {
            <th>
                @Html.DisplayNameFor(model => model.Message.Subject)
            </th>
        }
        @if (Model.Count() != 0)
        {
            <th>
                @Html.DisplayNameFor(model => model.Message.Body)
            </th>
        <th></th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Contact.GivenName) @Html.DisplayFor(modelItem => item.Contact.FamilyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message.Body)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Contact.Id, messageId = item.MessageId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<h2>
    @ViewBag.Message
</h2>
