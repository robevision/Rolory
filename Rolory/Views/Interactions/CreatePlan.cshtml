@model Rolory.Models.Contact

@{
    ViewBag.Title = "CreatePlan";
}

<br/>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.DescriptionId)
    @Html.HiddenFor(model => model.NetworkerId)
    @Html.HiddenFor(model => model.AddressId)
    @Html.HiddenFor(model => model.AltAddressId)

<div class="form-horizontal">
    <br/>
    <br />
    <h4>Set A Reminder</h4>
    <hr />

    <div class="form-group">
        @Html.Label("Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Reminder, new { type = "date", min = "2019"})
            @Html.ValidationMessageFor(model => model.Reminder, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Time", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="time" 
            @Html.TextBox("Time", new {type = "time"})
            @Html.ValidationMessageFor(model => model.Reminder, "", new { @class = "text-danger" })
        />
                   </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Interactions", "Index", new { id = Model.Id })
</div>
