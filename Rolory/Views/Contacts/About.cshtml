@model Rolory.Models.ContactDescriptionViewModel

@{
    ViewBag.Title = "About";
}
<style type="text/css">
.flip3D 
{ 
    width:480px; 
    height:288px; 
    margin:10px; 
    float:left;

}
    .flip3D > .front {
        position: absolute;
        transform: perspective(600px) rotateY(0deg);
        background-image: url('/Content/images/empty.png');
        width: 480px;
        height: 288px;
        border-radius: 7px;
        backface-visibility: hidden;
        transition: transform .5s linear 0s;
    }
    .flip3D > .back {
        position: absolute;
        transform: perspective(600px) rotateY(180deg);
        background-image: url('/Content/images/empty.png'); 
        width: 480px;
        height: 288px;
        border-radius: 7px;
        backface-visibility: hidden;
        transition: transform .5s linear 0s;
    }
 .flip3D:hover > .front
 {
     transform: perspective(600px) rotateY(-180deg);
 }
    .flip3D:hover > .back {
        transform: perspective(600px) rotateY(0deg);
    }

</style>

<br />
<div class="row">
    <div class="breadcrumb">
        <div class="col-md-push-9">
            <h2>About</h2>
        </div>
    </div>
</div>
<div class="container">
    <div class="col-md-4">

    </div>
    <br />
    @*<div class="flip3D">
        <div class="back"></div>
