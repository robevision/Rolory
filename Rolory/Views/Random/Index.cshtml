@model Rolory.Models.Contact

@{
    ViewBag.Title = "Index";
    var message = ViewBag.Message;
    <style>
        .w3-btn, .w3 button {
            border: none;
            display: inline-block;
            padding: 8px 16px;
            vertical-align: middle;
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            background-color: inherit;
            text-align: center;
            cursor: pointer;
            white-space: nowrap
        }

            .w3-btn:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2),0 6px 20px 0 rgba(0, 0, 0, 0.19)
            }

        .w3-btn, .w3-button {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none
        }

            .w3-disabled, .w3-btn:disabled, .w3-button:disabled {
                cursor: not-allowed;
                opacity: 0.3
            }

                .w3-disabled *, :disabled * {
                    pointer-events: none
                }

                .w3-btn .w3-disabled:hover, .w3-btn:disabled:hover {
                    box-shadow: none
                }
    </style>

}
<br />
<div class="row">
    <div class="breadcrumb">
        <div class="col-md-push-9">
            <h2>Connect</h2>
        </div>
    </div>
</div>
<hr />
<div class="col-md-4"></div>
<div class="col-md-4"></div>
<div class="col-md-4"></div>
@if (Model.ImagePath != null)
{
    if (ViewBag.UploadImage == true)
    {
        <h5> @Html.ActionLink("Upload Image", "UploadImage", "Contacts", new { id = Model.Id }, htmlAttributes: new { @class = "media-middle", style = "" })</h5>
    }
    else
    {
        <img class="center-block img-rounded" src="@Url.Content(Model.ImagePath)" width="150" length="150" />
    }
}
else
{
    <h5 class="text-center"> @Html.ActionLink("Upload Image", "UploadImage", "Contacts", new { id = Model.Id }, htmlAttributes: new { @class = "media-middle", style = "" })</h5>
}



<h3 class="text-center"> @Html.DisplayFor(model => model.Prefix) @Html.DisplayFor(model => model.GivenName)  @Html.DisplayFor(model => model.FamilyName)</h3>
<h4 class="text-center">@message</h4>
<h4 class="text-center">@Html.DisplayFor(model => model.PhoneNumber)</h4>
<h5 class="text-center">@Html.DisplayFor(model => model.Email)</h5>
<div class="text-center">
    <h4 class="text-center">Are you in touch with @Html.DisplayFor(model => model.GivenName)?</h4>
    <button class="w3-button w3-round-xlarge"> @Html.ActionLink("Yes", "ProvideContext", "Random", new { id = Model.Id }, null)</button>

    <button class="w3-button w3-round-xlarge">@Html.ActionLink("Not Really", "ConnectQuery", "Random", new { id = Model.Id }, null)</button>
</div>
<h5>@Html.ActionLink("Skip >>", "Index", "Random", new { id = 0 }, new { htmlAttributes = "text-center" })</h5>
