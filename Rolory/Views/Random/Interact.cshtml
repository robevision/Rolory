@model Rolory.Models.Contact
@{
    ViewBag.Title = "Interact";
    <style>
        .w3-btn, .w3 button {
            border: none;
            display: inline-block;
            padding: 8px 16px;
            vertical-align: middle;
            overflow: hidden;
            text-decoration: none;
            color: inherit;
            background-color: inherit;
            text-align: center;
            cursor: pointer;
            white-space: nowrap
        }

            .w3-btn:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2),0 6px 20px 0 rgba(0, 0, 0, 0.19)
            }

        .w3-btn, .w3-button {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none
        }

            .w3-disabled, .w3-btn:disabled, .w3-button:disabled {
                cursor: not-allowed;
                opacity: 0.3
            }

                .w3-disabled *, :disabled * {
                    pointer-events: none
                }

                .w3-btn .w3-disabled:hover, .w3-btn:disabled:hover {
                    box-shadow: none
                }
    </style>
}
<br />
<div class="row">
    <div class="breadcrumb">
        <div class="col-md-push-9">
            <h2>Interact</h2>
        </div>
    </div>
</div>

<br />

    <img class="text-center" src="@Html.DisplayFor(model => model.ImagePath)" width: 150px lengh: 150px />
    <h3 class="text-center" style="align-content:center"> @Html.DisplayFor(model => model.Prefix) @Html.DisplayFor(model => model.GivenName)  @Html.DisplayFor(model => model.FamilyName)</h3>


<br />

<div class="col-md-4"><button class="w3-button w3-round-xlarge">@Html.ActionLink("Log A Moment", "Create", "Interactions", new { id = Model.Id }, null)</button></div>
<div class="col-md-4"><p><a class="btn btn-primary btn-lg" src=@Html.ActionLink("Ice-Breaker","GetInTouch", "Random", new { id = Model.Id }, null)</a></p></div>
<div class="col-md-4"><button class="w3-button w3-round-xlarge">@Html.ActionLink("Schedule A Moment", "CreatePlan", "Interactions", new { id = Model.Id }, null)</button></div>
